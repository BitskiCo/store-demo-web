<MainJumbotron class="mt-5" />
{{#if this.showProcessing}}
  <div class="fixed-top w-100 h-100 d-flex justify-content-center align-items-center" aria-live="polite" aria-atomic="true">
    {{!-- template-lint-disable no-inline-styles --}}
    <div class="toast rounded-lg fade bounce-in {{unless this.fadeOutComplete "show"}}" style="width: 545px;">
    {{!-- template-lint-enable no-inline-styles --}}
      <div class="toast-header justify-content-center">
        <p class="h2 font-weight-bolder text-green mb-0">
          {{#if this.showComplete}}
            <a href="https://wallet.bitski.com" class="text-green">Complete! View in Wallet</a>
          {{else}}
            Purchase Processing
          {{/if}}
        </p>
      </div>
    </div>
  </div>
{{/if}}
<div class="grid grid-cols-md-2 grid-cols-lg-3 w-100 mt-5 mb-auto">
  {{#each this.model as |item|}}
    <InventoryItem @onProcessing={{this.onProcessing}} @onComplete={{this.onComplete}} @item={{item}} />
  {{/each}}
</div>
<h2 class="mt-5 pt-4 mb-3 font-weight-bolder">This demo features:</h2>
<div class="d-md-flex">
  <div class="w-md-50">
    <a href="https://docs.bitski.com/app-wallet/" class="btn btn-secondary text-white mr-2 mb-2">Bitski Enterprise Wallet</a>
    <a href="https://github.com/BitskiCo/example-stripe-nft" class="btn btn-secondary text-white mr-2 mb-2">Merchant Account Integration</a>
    <a href="https://github.com/BitskiCo/example-stripe-nft" class="btn btn-secondary text-white mr-2 mb-2">Purchase NFT Via Credit Card</a>
    <a href="https://docs.bitski.com/getting-started/" class="btn btn-secondary text-white mr-2 mb-2">Bitski User Wallet</a>
  </div>
  <button id="intercom" type="button" class="btn btn-secondary font-weight-bolder text-white rounded-lg btn-lg h3 text-xlg p-3 p-md-4 d-flex align-items-center ml-md-auto my-auto letter-spacing-sm">
    <img src="/assets/svg/chat-bubble.svg" alt="Chat bubble" class="ml-2 mr-4">
    <span class="pr-5">Chat With Us</span>
  </button>
</div>